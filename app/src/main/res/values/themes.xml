<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TutorNearMe" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:colorControlHighlight">@color/white</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="fontFamily">@font/uber_move</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTitle" parent="FirebaseUI">
        <item name="android:textSize">43sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/roboto_slab_bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="LoginTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:colorControlHighlight">@color/white</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Base.Theme.TutorNearMe.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Custom.ActionBarTitle" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Custom.ActionBar" parent="Widget.Material3.Light.ActionBar.Solid">
        <item name="background">@color/colorPrimary</item>
        <item name="titleTextStyle">@style/Custom.ActionBarTitle</item>
    </style>

    <style name="Base.Theme.TutorNearMe.ActionBar" parent="Theme.Material3.Light">
        <item name="actionBarStyle">@style/Custom.ActionBar</item>
        <item name="title">Basic Information</item>
        <item name="navigationIcon">@drawable/ic_arrow_back</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:colorControlHighlight">@color/white</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="fontFamily">@font/uber_move</item>

        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Base.Theme.TutorNearMe.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Base.Theme.TutorNearMe.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SpinnerTextViewItem">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>